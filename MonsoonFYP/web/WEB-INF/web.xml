<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!---Login-->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.tempest.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>appointmentBooking</servlet-name>
        <servlet-class>com.tempest.controllers.AppointmentBookingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewLoyaltyPointsHistoryController</servlet-name>
        <servlet-class>com.tempest.controllers.ViewLoyaltyPointsHistoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateInventoryDetailsController</servlet-name>
        <servlet-class>com.tempest.controllers.UpdateInventoryDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddItemsToController</servlet-name>
        <servlet-class>com.tempest.controllers.AddItemsToController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/authenticate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>appointmentBooking</servlet-name>
        <url-pattern>/appointmentBooking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewLoyaltyPointsHistoryController</servlet-name>
        <url-pattern>/ViewLoyaltyPointsHistoryController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateInventoryDetailsController</servlet-name>
        <url-pattern>/UpdateInventoryDetailsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddItemsToController</servlet-name>
        <url-pattern>/AddItemsToController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
